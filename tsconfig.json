{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "components": [
        "components/"
      ],
      "pages/*": [
        "pages/*"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ]
}